<h1>Log in</h1>

<div class="panel panel-default">
  <div class="panel-body">
  <%= form_with(scope: :session, url: sessions_path, local:true) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <div class="button">
    <%= f.submit "Log in", class:"btn btn-primary" %>
    </div>
  <% end %>

    <p class="question">Forgot account?</p>

    <hr>

    <div class="button">
    <%= link_to 'Create New Account', new_user_path, class:"btn btn-success" %>
    </div>
  </div>
</div>
