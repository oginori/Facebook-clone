<h1>Facebook Clone</h1>

<h2>投稿一覧</h2>
<p><%= notice %></p>

<table>
  <tr>
    <th>内容</th>
  </tr>
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.user.name %></td>
    <td><%= image_tag(picture.image.url) %></td>
    <td><%= link_to '詳細', picture_path(picture.id) %>
    <td><%= link_to '編集', edit_picture_path(picture.id) %>
    <td><%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
  </tr>
<% end %>
</table>


<p>
<%= link_to '新規投稿', new_picture_path %>
</p>
